{
  "name": "sifu",
  "displayName": "Save If File Unchanged",
  "description": "Save If File Unchanged",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sifu.saveAllUnchangedFiles",
        "title": "Save All Unchanged Files"
      }
    ],
    "configuration": {
        "type": "object",
        "title": "Sifu configuration",
        "properties": {
            "sifu.runOnStartup": {
                "type": "boolean",
                "default": true,
                "description": "Immediately try to save all unchanged files on opening a workspace"
            }
        }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tiuweehan/sifu.git"
  },
  "publisher": "tiuweehan",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  }
}
